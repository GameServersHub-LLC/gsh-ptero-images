FROM php:8.0-apache

# Install system dependencies
RUN apt-get update && apt-get install -y \
    wget \
    git \
    zip \
    unzip \
    libzip-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install PHP extensions
RUN docker-php-ext-install zip

# Install composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Configure Apache and permissions
RUN a2enmod rewrite && \
    chown -R container:container /var/run/apache2 /var/log/apache2 /var/lock/apache2

# Copy entrypoint and set permissions first
COPY ./entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Setup pterodactyl user and permissions
RUN useradd -d /home/container -m container

# Set working directory
WORKDIR /home/container

# Switch to container user last
USER container
ENV USER=container HOME=/home/container

# Switch to CMD instead of ENTRYPOINT for Pterodactyl
CMD ["/bin/bash", "/entrypoint.sh"]